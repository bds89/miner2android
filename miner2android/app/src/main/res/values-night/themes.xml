<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Miner2android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/addpcbuttonBG</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/addpcbuttonBG</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text</item>
    </style>




    <style name="applyDialog" parent="Theme.MaterialComponents.Dialog.Alert.Bridge">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:textColorPrimary">@color/dialogText</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/applyDialogButtonPositive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/applyDialogButtonNegative</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="applyDialogButtonPositive" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialogButton</item>
    </style>
    <style name="applyDialogButtonNegative" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialogText</item>
    </style>


</resources>